WindowManager:
    MainPage: # call class from python file
    SecondWindow: # call class from python file
    ThirdWindow: # call class from python file
    FourthWindow: 

<MainPage>:
    name: "main" # define the name as it will be called later

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            text: "Main Page"
            font_size: 32
        
    
    BoxLayout:
        orientation: "horizontal"
        size: root.width, root.height

        Button:
            text: "Push Ups"
            size_hint: (0.200, 0.125)
            font_size: 15
            background_color: (0,0,1,1)
            on_release: 
                app.root.current = "second" # move to  this page when button clicked
                root.manager.transition.direction = "left" #direction of the window slide
        
        Button:
            text: "Squats"
            size_hint: (0.200, 0.125)
            font_size: 15
            background_color: (1,0,0,1)
            on_release: 
                app.root.current = "third" # move to  this page when button clicked
                root.manager.transition.direction = "left" # direction of the window slide

        Button:
            text: "Sit Ups"
            size_hint: (0.200, 0.125)
            font_size: 15
            background_color: (0,1,1,1)
            on_release: 
                app.root.current = "fourth" # move to  this page when button clicked
                root.manager.transition.direction = "left" # direction of the window slide

